<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EyetrackingActivity">

    <TextureView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/view_warning_tracking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/red_border_line"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_start_calibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="15sp"
            android:fontFamily="@font/wemakeprice_regular"
            android:backgroundTint="#FFD147"
            android:text="초점 재조절" />


        <Button
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="완료"
            android:textColor="#000000"
            android:textSize="15sp"
            android:fontFamily="@font/wemakeprice_regular"
            android:backgroundTint="#FFD147"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- 시선 좌표 -->
    <com.example.harang.view.PointView
        android:id="@+id/view_point"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <!-- 캘리브레이션 뷰 -->
    <com.example.harang.view.CalibrationViewer
        android:id="@+id/view_calibration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

    <include layout="@layout/layout_progress" />

</androidx.constraintlayout.widget.ConstraintLayout>