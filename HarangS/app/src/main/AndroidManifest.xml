<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.harangS">
    <!-- aws -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.example.harangS.activity.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Harang"
        android:usesCleartextTraffic="true">
        <activity android:name="com.example.harangS.activity.MyInfoActivity"></activity>
        <activity
            android:name="com.example.harangS.activity.EyetrackingActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.example.harangS.activity.ProfileActivity" />
        <activity
            android:name="com.example.harangS.activity.RegisterActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="com.example.harangS.activity.LoginActivity"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name="com.example.harangS.SplashActivity"
            android:theme="@style/splashTheme"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.harangS.activity.BaseActivity"></activity>
        <activity android:name="com.example.harangS.activity.StudentConcentRateActivity"></activity>
        <activity android:name="com.example.harangS.activity.SClipVideoActivity"></activity>

        <activity android:name="com.example.harangS.activity.StudentFullVideoActivity"></activity>

        <activity android:name="com.example.harangS.activity.StudentStreamRTMPActivity" />
        <activity
            android:name="com.example.harangS.activity.DownloadActivity"
            android:label="@string/download_activity" />
            android:name="com.example.harangS.activity.DownloadSelectionActivity"
            android:label="@string/download_selection_activity" />

        <service
            android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService"
            android:enabled="true" />
        <service
            android:name="com.example.harangS.activity.MyService"
            android:enabled="true" />
    </application>

</manifest>