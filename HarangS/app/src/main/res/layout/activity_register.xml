<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity"
    android:background="#FFFFCC">




    <EditText
        android:id="@+id/et_id"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="아이디"
        android:fontFamily="@font/wemakeprice_regular"
        android:inputType="textPersonName"
        android:background="@drawable/rounded_register"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="이름"
        android:fontFamily="@font/wemakeprice_regular"
        android:inputType="textPersonName"
        android:background="@drawable/rounded_register"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="@+id/et_id"
        app:layout_constraintStart_toStartOf="@+id/et_id"
        app:layout_constraintTop_toBottomOf="@+id/et_id" />

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="비밀번호"
        android:fontFamily="@font/wemakeprice_regular"
        android:inputType="textPassword"
        android:background="@drawable/rounded_register"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="@+id/et_name"
        app:layout_constraintStart_toStartOf="@+id/et_name"
        app:layout_constraintTop_toBottomOf="@+id/et_name" />

    <EditText
        android:id="@+id/et_passConfirm"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="비밀번호 재입력"
        android:fontFamily="@font/wemakeprice_regular"
        android:inputType="textPassword"
        android:background="@drawable/rounded_register"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="@+id/et_pass"
        app:layout_constraintStart_toStartOf="@+id/et_pass"
        app:layout_constraintTop_toBottomOf="@+id/et_pass" />

    <EditText
        android:id="@+id/et_major"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="과목"
        android:fontFamily="@font/wemakeprice_regular"
        android:inputType="textPersonName"
        android:background="@drawable/rounded_register"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="@+id/et_passConfirm"
        app:layout_constraintStart_toStartOf="@+id/et_passConfirm"
        app:layout_constraintTop_toBottomOf="@+id/et_passConfirm" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="44dp"
        android:background="@drawable/rounded_button"
        android:text="회원가입"
        android:fontFamily="@font/wemakeprice_regular"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/et_major"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/et_major"
        app:layout_constraintTop_toBottomOf="@id/et_major" />

    <TextView
        android:id="@+id/student_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학생 회원가입"
        android:fontFamily="@font/wemakeprice_regular"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/et_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_validation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="중복"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/et_id"
        app:layout_constraintBottom_toBottomOf="@id/et_id"/>


</androidx.constraintlayout.widget.ConstraintLayout>