<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.harang">
    <!-- aws -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".activity.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Harang"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.ProfileActivity"></activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".activity.LoginActivity"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.DemoActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.BaseActivity"></activity>
        <activity
            android:name=".activity.MediaActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.VideoActivity" />
        <activity
            android:name=".activity.DownloadActivity"
            android:label="@string/download_activity" />
        <activity
            android:name=".activity.UploadActivity"
            android:label="@string/upload_activity" />
        <activity
            android:name=".activity.DownloadSelectionActivity"
            android:label="@string/download_selection_activity" />
        <activity
            android:name=".activity.ShowActivity"
            android:label="@string/show_activity" />

        <service
            android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService"
            android:enabled="true" />
        <service
            android:name=".activity.MyService"
            android:enabled="true" />
    </application>

</manifest>